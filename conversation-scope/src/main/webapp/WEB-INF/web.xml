<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name>Tomcat CDI example</display-name>
  <listener>
    <!--<listener-class>org.jboss.weld.servlet.WeldInitialListener</listener-class> -->
    <listener-class>org.jboss.weld.environment.servlet.Listener</listener-class>
    <!--<listener-class>org.jboss.weld.servlet.WeldTerminalListener</listener-class> -->
  </listener>

  <!-- Welcome page list -->
  <welcome-file-list>
    <welcome-file>via-servlet.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>UTBServlet</servlet-name>
    <servlet-class>org.uli.conversationscope.UrlToBeansServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- JSF mapping -->
  <servlet>
    <servlet-name>faces</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- Map these files with JSF -->
  <servlet-mapping>
    <servlet-name>faces</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UTBServlet</servlet-name>
    <url-pattern>/START</url-pattern>
  </servlet-mapping>

  <filter>
    <display-name>JsessionId Filter</display-name>
    <filter-name>uliFilter</filter-name>
    <filter-class>org.uli.conversationscope.EnforceUrlFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>uliFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <session-config>
    <session-timeout>240</session-timeout>
    <!-- <tracking-mode>URL</tracking-mode> -->
  </session-config>

</web-app>
